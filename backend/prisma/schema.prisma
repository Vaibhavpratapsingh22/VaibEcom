// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider     = "mongodb"
    url          = env("MONGODB_URI")
    relationMode = "prisma"
}

model Products {
    id          String   @id @default(auto()) @map("_id") @db.ObjectId
    name        String  @unique
    price       Int
    description String
    image       String[]
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt
}

model Category{
    id          String   @id @default(auto()) @map("_id") @db.ObjectId
    name        String  @unique
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt
}
